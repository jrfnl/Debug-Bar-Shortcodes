<?xml version="1.0"?>
<ruleset name="Debug Bar Shortcodes">
	<description>The code standard for Debug Bar Shortcodes is WordPress.</description>

	<!-- Exclude the codesniffer itself from checks. -->
	<exclude-pattern>phpcs/*</exclude-pattern>
	<exclude-pattern>wpcs/*</exclude-pattern>

	<rule ref="WordPress">
		<exclude name="WordPress.VIP" />
		<exclude name="Squiz.WhiteSpace.SuperfluousWhitespace.EmptyLines" />

		<!-- else on new line is perfectly fine -->
		<exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace" />

		<!-- Demanding Yoda conditions is stupid. -->
		<exclude name="WordPress.PHP.YodaConditions"/>

	</rule>

	<rule ref="WordPress-Docs">
		<!-- Exclude a number of rules for being over-zealous IMHO. -->
		<exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop"/>
		<exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
	</rule>

	<!-- exclude the 'empty' index files from some documentation checks -->
	<rule ref="Squiz.Commenting.FileComment.WrongStyle">
		<exclude-pattern>*/index.php</exclude-pattern>
	</rule>
	<rule ref="Squiz.Commenting.InlineComment.SpacingAfter">
		<exclude-pattern>*/index.php</exclude-pattern>
	</rule>
	<rule ref="Generic.Files.EndFileNewline.NotFound">
		<exclude-pattern>*/index.php</exclude-pattern>
	</rule>

</ruleset>
